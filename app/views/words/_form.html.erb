<%= form_for @word, :html => { :class => "form-horizontal word" } do |f| %>

  <% if @word.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @word.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :definition, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :definition, :class => 'form-control' %>
    </div>
    <%=f.error_span(:definition) %>
  </div>
  <div class="form-group">
    <%= f.label :word, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :word, :class => 'form-control' %>
    </div>
    <%=f.error_span(:word) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                words_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
