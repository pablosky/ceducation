<h1>Listing planifications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Program</th>
      <th>Subject</th>
      <th>Teach time</th>
      <th>Classroom</th>
      <th>Obj fund vert</th>
      <th>Obj fund transv</th>
      <th>Contents</th>
      <th>Expect learn</th>
      <th>Activ</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @planifications.each do |planification| %>
      <tr>
        <td><%= planification.user %></td>
        <td><%= planification.program %></td>
        <td><%= planification.subject %></td>
        <td><%= planification.teach_time %></td>
        <td><%= planification.classroom %></td>
        <td><%= planification.obj_fund_vert %></td>
        <td><%= planification.obj_fund_transv %></td>
        <td><%= planification.contents %></td>
        <td><%= planification.expect_learn %></td>
        <td><%= planification.activ %></td>
        <td><%= link_to 'Show', planification %></td>
        <td><%= link_to 'Edit', edit_planification_path(planification) %></td>
        <td><%= link_to 'Destroy', planification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

